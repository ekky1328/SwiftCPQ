
<div class="item-product grid grid-cols-[50px_1fr_75px_100px] py-0.5 px-1 mb-2 <% nextItem && nextItem.type === 'PRODUCT' ? 'border-b border-gray-200' : '' %>">
    <div>
        <%- item.qty %>
    </div>
    <div class="flex flex-col">
        <div>
            <%- item.title %>
        </div>

        <% if (item.description && item.description.trim() !== '') { %>
            <div class="pt-2">
                <%- item.description %>
            </div>
        <% } %>

    </div>
    <div class="text-right">
        <%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(item.price) %>
    </div>
    <div class="text-right">
        <%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(item.price * item.qty) %>
    </div>
</div>